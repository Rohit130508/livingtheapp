<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.RegistrationActivity"
    android:background="@color/colorPrimaryDark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollIndicators="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="13dp">


        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/login_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi,Nice to meet you"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="21sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:padding="13sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address*"
            android:fontFamily="@font/montserrat"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:padding="13sp"/>

        <EditText

            android:id="@+id/inputSearchEditText"

            android:layout_width="320dp"
            android:layout_height="60dp"
            android:ellipsize="start"
            android:gravity="center"

            android:inputType="textEmailAddress"
            android:background="@drawable/grad_edittext"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:fontFamily="@font/montserrat"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:padding="13sp"/>

        <EditText

            android:layout_width="320dp"
            android:layout_height="60dp"
            android:ellipsize="start"
            android:gravity="center"

            android:inputType="textPassword"
            android:background="@drawable/grad_edittext"/>

        <TextView
            android:layout_marginTop="17dp"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forget Password"
            android:textStyle="italic"
            android:fontFamily="@font/montserrat"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:padding="13sp"/>


        <TextView
            android:id="@+id/txtGetStarted"
            android:layout_marginTop="37dp"
            android:gravity="center"
            android:layout_width="240dp"
            android:layout_height="60dp"

            android:text="Login"
            android:background="@drawable/boxborder"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            android:textSize="19sp" />


    </LinearLayout>

    </ScrollView>

</RelativeLayout>