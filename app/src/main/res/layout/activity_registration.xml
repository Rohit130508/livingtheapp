<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.RegistrationActivity"
    android:scrollIndicators="none"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/colorPrimaryDark"
        android:padding="13dp">


    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/login_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi,Nice to meet you"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="21sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:padding="13sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name*"
        android:fontFamily="@font/montserrat"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:padding="13sp"/>

    <EditText

        android:id="@+id/inputFName"
        android:textColor="@color/textcolor"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:ellipsize="start"
        android:gravity="center"

        android:fontFamily="@font/montserrat"
        android:inputType="text"
        android:background="@drawable/grad_edittext"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:fontFamily="@font/montserrat"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:padding="13sp"/>

    <EditText

        android:id="@+id/inputLName"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:ellipsize="start"
        android:gravity="center"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/textcolor"
        android:inputType="text"
        android:background="@drawable/grad_edittext"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number*"
        android:fontFamily="@font/montserrat"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:padding="13sp"/>
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtCountryList"
            android:gravity="center_vertical"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="+961"
            android:drawableStart="@drawable/ic_down_arrow"
            android:drawablePadding="7dp"
            android:fontFamily="@font/montserrat"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:background="@drawable/grad_edittext"
            android:padding="13sp"/>

        <EditText
            android:id="@+id/inputmobile"
            android:layout_marginStart="10dp"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:ellipsize="start"
            android:gravity="center"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/textcolor"
            android:inputType="number"
            android:background="@drawable/grad_edittext"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address*"
        android:fontFamily="@font/montserrat"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:padding="13sp"/>

    <EditText

        android:id="@+id/inputEmailId"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:ellipsize="start"
        android:gravity="center"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/textcolor"
        android:inputType="text"
        android:background="@drawable/grad_edittext"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Of Birth*"
        android:fontFamily="@font/montserrat"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:padding="13sp"/>

        <TextView
            android:textColor="@color/textcolor"
            android:textSize="19sp"
            android:fontFamily="@font/montserrat"
            android:id="@+id/inputDateOfBirth"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:ellipsize="start"
            android:gravity="center"
            android:background="@drawable/grad_edittext"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password*"
        android:fontFamily="@font/montserrat"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:padding="13sp"/>
    <EditText

        android:id="@+id/inputPassword"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:ellipsize="start"
        android:gravity="center"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/textcolor"
        android:inputType="text"
        android:background="@drawable/grad_edittext"/>



        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password*"
        android:fontFamily="@font/montserrat"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:padding="13sp"/>
    <EditText
        android:id="@+id/inputConfirmPass"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:ellipsize="start"
        android:gravity="center"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/textcolor"
        android:inputType="text"
        android:background="@drawable/grad_edittext"/>


        <TextView
            android:id="@+id/txtGetStarted"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:layout_width="240dp"
            android:layout_height="60dp"

            android:text="Submit"
            android:background="@drawable/boxborder"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            android:textSize="19sp" />


    </LinearLayout>
</ScrollView>