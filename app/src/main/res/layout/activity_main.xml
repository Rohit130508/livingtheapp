<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linTop"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_marginStart="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_gear"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/txtCountry"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:drawablePadding="17dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Lebanon"
            android:textSize="19sp"
            android:layout_gravity="center_vertical"
            android:drawableEnd="@drawable/ic_down_arrow_white"
            android:fontFamily="@font/montserrat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"/>

        <ImageView
            android:layout_marginEnd="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlImage"
        android:layout_below="@+id/linTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/finedining"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#80000000"
            android:text="Welcome in Living the app, Please login with us >"
            android:padding="17dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15sp"/>
    </RelativeLayout>

    <LinearLayout

        android:id="@+id/linCat"
        android:layout_below="@+id/rlImage"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">




            <ImageView
                android:id="@+id/imgBeau"
                android:padding="3dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/avdddv"/>

            <ImageView
                android:id="@+id/imgshop"
                android:padding="3dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/fdd"/>
            <ImageView
                android:id="@+id/imgcycle"
                android:padding="3dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/asad"/>



        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">



            <ImageView
                android:id="@+id/imgDrin"
                android:padding="3dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/ass"/>

            <ImageView
                android:id="@+id/imgRest"
                android:padding="3dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/resa"/>

            <ImageView
                android:id="@+id/imgBag"
                android:padding="3dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:src="@drawable/abcd"/>



        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linOffer"
        android:layout_below="@+id/linCat"
        android:background="@drawable/offer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        >


